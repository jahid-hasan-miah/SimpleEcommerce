@model IEnumerable<ECommerceSystem.Web.Models.Product.Product>
@{ Layout = "_Layout"; ViewBag.Title = "All Products";}

<h2>All Products</h2>
<a class="btn btn-success" asp-action="AddProduct" asp-controller="Product">Add New Product</a>
<a class="btn btn-danger" asp-action="Index" asp-controller="Trash">Trash</a>
<hr />
<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th style="width:350px">Name</th>
            <th style="width:350px">Price</th>
            <th style="text-align:center">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
        <tr>
            <td>@r.ProductName</td>
            <td>@r.Price</td>
            <td style="text-align:center">
                <div class="row">
                    <a style="margin-left:120px;width:110px" class="col-2 btn btn-primary" asp-controller="Product" asp-action="EditProduct" asp-route-id="@r.Id">
                        Edit
                    </a>
                    <form class="ml-2" method="post">
                        <button style="width:110px" class="btn btn-danger" type="submit" asp-action="DeleteProduct" asp-controller="Product" asp-route-id="@r.Id">
                            Delete
                        </button>
                    </form>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>

