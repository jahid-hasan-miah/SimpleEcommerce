@model ECommerceSystem.Web.Models.Product.Product

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Add a Product</h3>
                    </div>
                    @if (ViewBag.IsSuccess == true)
                    {

                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong>Success- </strong>Your record added Sucessfully.<br />
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form class="form-horizontal" method="post" asp-antiforgery="true">
                        <input type="hidden" asp-for="Id" />
                        <div class="card-body">
                            <div class="form-group row">
                                <label asp-for="ProductName" class="col-sm-2 col-form-label">Product Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="ProductName"
                                           id="title" placeholder="Product Name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Price" class="col-sm-2 col-form-label">Price</label>
                                <div class="col-sm-10">
                                    <input type="number" asp-for="Price" class="form-control"
                                           id="fees" placeholder="Price">
                                </div>
                            </div>

                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Add</button>
                            <a asp-action="Index" asp-controller="Product"
                               class="btn btn-default float-right">Cancel</a>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

