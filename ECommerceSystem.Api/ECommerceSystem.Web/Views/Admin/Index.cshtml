@model IEnumerable<ECommerceSystem.Membership.Entities.ApplicationUser>

<h1 class="text-danger">All User</h1>
<a asp-controller="Account" asp-action="Register" class="btn btn-success">Create a User</a>
<a asp-controller="Admin" asp-action="RoleManaging" class="btn btn-success">Role managing</a>
<hr />
<table class="table table-sm table-bordered table-bordered">
    <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Delete</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.Email</td>
            <td>
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

